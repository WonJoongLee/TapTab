<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/main_toptitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellobibrant">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="TapTab"
            android:textSize="40sp"
            android:fontFamily="@font/jalnan"
            android:textColor="@color/blueatoll"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_noticebanner"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@id/main_toptitlebar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        android:orientation="horizontal"
        android:background="@color/yellobibrant"
        >

        <com.youth.banner.Banner
            android:id="@+id/banner"
            xmlns:banner="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            banner:indicator_radius="5dp"
            banner:indicator_normal_color="@color/graydark"
            banner:indicator_selected_color="@color/blueatoll"
            banner:indicator_normal_width="6.5dp"
            banner:indicator_selected_width="9dp"
            banner:indicator_space="8dp"
            />

    </LinearLayout>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/main_noticebanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_viewpager_linearlayout"
        android:background="@color/yellobibrant"
        app:tabTextColor="@color/graydark"
        app:tabSelectedTextColor="@color/blueatoll"
        app:tabIndicatorColor="@color/blueatoll"

        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양성재"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양진재" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개성재" />

    </com.google.android.material.tabs.TabLayout>

    <!--이 부분 하드 코딩 된 것 수정할 것
        왜 bottomtobottomof parent가 잘안되는지... -->
    <LinearLayout
        android:id="@+id/main_viewpager_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>