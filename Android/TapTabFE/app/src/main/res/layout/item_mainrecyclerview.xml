<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_nthDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jalnan"
        android:text="number"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_tabletimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/device"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_nthDevice" />

    <TextView
        android:id="@+id/item_deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="model name"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/item_tabletimage"
        app:layout_constraintTop_toBottomOf="@id/item_nthDevice"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/jalnan"/>

    <TextView
        android:id="@+id/item_rental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rental availability"
        android:textColor="@color/blueatoll"
        app:layout_constraintStart_toEndOf="@+id/item_tabletimage"
        app:layout_constraintTop_toBottomOf="@id/item_deviceName"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/jalnan"/>



</androidx.constraintlayout.widget.ConstraintLayout>